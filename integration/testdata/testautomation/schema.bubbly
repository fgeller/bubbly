
table "repo_version" {
    field "commit" {
        type = string
        unique = true
    }
    field "tag" {
        type = string
        unique = true
    }
    field "branch" {
        type = string
        unique = false
    }
}

table "test_run" {
    field "repo_version_id" {
        type = number
        unique = false
    }

    field "name" {
        type = string
        unique = true
    }
    field "description" {
        type = string
        unique = false
    }

    field "elapsed" {
        type = number
        unique = false
    }

    table "test_set" {
        field "name" {
            type = string
            unique = false
        }
        field "description" {
            type = string
            unique = false
        }

        table "test_case" {

            field "name" {
                type = string
                unique = false
            }
            field "status" {
                type = string
                unique = false
            }

            table "step" {
                field "name" {
                    type = string
                    unique = false
                }
                field "step_id" {
                    type = number
                    unique = false
                }
            }
            table "failure" {
                field "type" {
                    type = string
                    unique = false
                }
                field "message" {
                    type = string
                    unique = false
                }
            }
        }
    }
}