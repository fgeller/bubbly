
release {
    project = "bubbly"
    input {
        git {
            repo = "./repo-with-tag"
        }
    }
    output {
        artifact {
            name = "bubbly"
            location = "file://./artifacts/artifact.txt"
        }
    }

    stage "Code Analysis" {
        // TODO: create pipeline and test file
        // criteria "gofmt" {
        //     run "pipeline/gofmt" {}
        // }
        // TODO: create pipeline and test for gosec
        criteria "gosec" {
            run "pipeline/gosec" {
                input "file" {
                    value = "./testdata/release/results/gosec.json"
                }
            }
            run "criteria/gosec" {}
        }
    }
    stage "Testing" {
        criteria "unit_test" {
            run "pipeline/gotest" {
                input "file" {
                    value = "./testdata/release/results/gotest.json"
                }
            }
            run "criteria/gotest" { }
        }
    }
}
